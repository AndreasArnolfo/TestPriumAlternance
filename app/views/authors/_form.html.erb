<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %></h2>

      <ul>
        <% author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :author_name %>
    <%= form.text_field :author_name %>
  </div>

  <div class="field">
    <%= form.label :author_city %>
    <%= form.text_field :author_city %>
  </div>

  <div class="field">
    <%= form.label :author_birth %>
    <%= form.date_select :author_birth  %>
  </div>

  <div class="field">
    <%= form.label :author_number_book %>
    <%= form.text_field :author_number_book %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
